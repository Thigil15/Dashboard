rules_version = '2';
service firebase.storage {
  match /b/{bucket}/o {
    match /{allPaths=**} {
      // Allow read access for authenticated users
      // This lets logged-in users view and download scale files
      allow read: if request.auth != null;
      
      // Allow write access only for:
      // 1. Users with admin token (set via custom claims)
      // 2. The Google Apps Script service account
      allow write: if request.auth != null && 
                      (request.auth.token.admin == true || 
                       request.auth.uid == 'dashboard-thiago-230425');
    }
  }
}
